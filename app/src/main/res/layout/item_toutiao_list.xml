<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/toutiao_item_img"
        android:layout_width="100dp"
        android:layout_height="75dp"
        app:srcCompat="@drawable/toutiao_default"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/toutiao_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:text="This is titleThis is titletitletitletitletitletitletitletitletitletitletitle"
        android:textAppearance="@android:style/TextAppearance.Material.Title"
        android:layout_alignTop="@+id/toutiao_item_img"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@+id/toutiao_item_img"
        android:layout_marginStart="8dp" />


    <TextView
        android:id="@+id/toutiao_item_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="this is author"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        android:layout_toEndOf="@+id/toutiao_item_img"
        android:layout_marginStart="8dp"
        android:layout_alignBottom="@+id/toutiao_item_img"/>

    <TextView
        android:id="@+id/toutiao_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017-08-01 23:23:00"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        app:layout_constraintBottom_toBottomOf="@+id/toutiao_item_img"
        android:layout_alignBottom="@+id/toutiao_item_img"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"/>


</RelativeLayout>