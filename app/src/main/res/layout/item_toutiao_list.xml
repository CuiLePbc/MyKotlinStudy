<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/toutiao_item_img"
        android:layout_width="100dp"
        android:layout_height="75dp"
        app:srcCompat="@drawable/toutiao_default"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/toutiao_item_title"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:text="This is titleThis is titletitletitletitletitletitletitletitletitletitletitle"
        android:textAppearance="@android:style/TextAppearance.Material.Title"
        app:layout_constraintStart_toEndOf="@+id/toutiao_item_img"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/toutiao_item_date"
        app:layout_constraintHorizontal_bias="0.0" />


    <TextView
        android:id="@+id/toutiao_item_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="this is author"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        app:layout_constraintBottom_toBottomOf="@+id/toutiao_item_img"
        app:layout_constraintStart_toStartOf="@+id/toutiao_item_title"
        android:layout_marginStart="0dp" />

    <TextView
        android:id="@+id/toutiao_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017-08-01 23:23:00"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        app:layout_constraintBottom_toBottomOf="@+id/toutiao_item_img"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent" />


</android.support.constraint.ConstraintLayout>